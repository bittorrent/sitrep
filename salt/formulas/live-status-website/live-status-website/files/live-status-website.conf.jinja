description "live-status-website"

start on (filesystem)
stop on runlevel [016]

respawn
setuid live-status
setgid live-status
chdir {{ root }}

exec /opt/live-status-website/bin/gunicorn app.wsgi {{ '--log-level=debug' if dev_environment else '' }} --env LIVE_STATUS_SETTINGS=/opt/live-status-website/settings.json --workers=8
